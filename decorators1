class type_error(Exception):
    """
    Custom error class that used to specify the errors and make theme more readable.
    """
    pass


def type_check(func):
    """
    This function is a decorator, that checks the type if matches the arguments.
    :param func:
    :return:
    """
    def wrapper(*args, **kwargs):
        """
        this function is wrapper function it is used to run the func object that we passed to type test function.
        :param args.
        :param kwargs.
        :return: it not returns any thing, if the type not matches it raises a type error.
        """
        val = func(*args, **kwargs)
        if not val:
            raise type_error(*args)

    return wrapper


@type_check
def function(type_to_check, argument):
    """
    That function is a decorator, that checks if the type is correct or not.
    :param type_to_check.
    :param argument.
    :return: true if correct otherwise false.
    """
    if type(argument) == type_to_check:
        return True
    return False


# Press the green button in the gutter to run the script.
if __name__ == '__main__':
    function(bool, True)
    function(int, 1.1)
    function(bool, 1)
    function(int, 1)


